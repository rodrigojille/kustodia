{
  "name": "kustodia-backend",
  "version": "1.0.0",
  "description": "Backend for Kustodia escrow/payment platform.",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npx copyfiles -u 3 ../contracts/artifacts/contracts/**/* src/artifacts && ts-node-dev --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "npx copyfiles src/artifacts/**/* dist/ && tsc",
    "heroku-prebuild": "mkdir -p src/artifacts/contracts || true",
    "heroku-postbuild": "npm run setup-prod-db",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "setup-prod-db": "ts-node scripts/setup-production-database.ts",
    "fix-prod-db": "ts-node scripts/fix-production-database.ts",
    "health-check": "ts-node scripts/check-production-health.ts",
    "db:sync": "ts-node -e \"import AppDataSource from './src/ormconfig'; AppDataSource.initialize().then(() => AppDataSource.synchronize()).then(() => process.exit(0))\""
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.14.0",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^4.1.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.13",
    "openai": "^4.20.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.17",
    "uuid": "^11.1.0",
    "copyfiles": "^2.4.1"
  },
  "engines": {
    "node": ">=18.0.0 <23"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express-session": "^1.18.2",
    "@types/node": "^20.12.12",
    "@types/node-fetch": "^2.6.11",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.15.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  }
}
